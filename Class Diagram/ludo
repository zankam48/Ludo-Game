classDiagram
    class Game {
        -Board board
        -players : List~Player~
        -Dice dice
        -currentPlayer : Player
        -isGameOver : bool

        +Game(players: List~Player~, board: Board)
        +StartGame() : void
        +EndGame() : void
        +NextPlayerTurn() : void
        +ExecuteTurn() : void
        +GetWinner() : Player
        +CreateBoard() : void
        +MovePiece(Piece piece, int diceValue) : void
        +SelectPiece(Piece piece) : piece
        +IsOverlapped(Player player1, Player player2) : bool
        +RollDice() : int
        +Action~Player~OnNextPlayerTurn()
        +Action<Dice> OnDiceRoll
    }


    class Player {
        -name : string
        -PieceColor color
        %% +currentPosition : int
        -piece : List~Piece~
        -score : int
        +Player(name: string, color: PieceColor, piece: List~Piece~, score: int)
        +SetColor(PieceColor color) : void 
        +GetScore() : int
        +HasPieceAtHome() : bool
        %% +CheckWin() : bool
        %% -canMakeMove : bool
    }

    class Board {
        -squares: List~Square~
        %% -pieces: List~Piece~
        -safeZone: List~Square~
        -startPositions: Dict~PieceColor, List int ~
        -goalPositions: Dict~PieceColor, List int ~
        +Board()
        +GetSquare(int position) : Square
        %% +SetGoal() : void
        +SetPath(Piece piece) : void
        +GetGoalPositions() : Dict[PieceColor, int[]] 
        +GetStartPositions() : Dict[PieceColor, int[]]
    }

    class Piece {
        -PieceColor color
        -position : int
        +Piece(color: PieceColor, position: int)
        %% +MoveWithValue(int diceValue) : void
        +isAtGoal() : bool
        +isAtHome() : bool
        
    }

    class Square {
        +Square(color: PieceColor, position: int)
        -PieceColor color
        -position : int
        -occupant : List~Piece~
        +IsOccupied() : bool
        
    }

    class Dice {
        +Dice()
        -diceValue : int
        %% +DiceRollDelegate()
    }

    class PieceColor {
        <<enum>>
        YELLOW
        RED
        BLUE
        GREEN
    }

    class GameState {
        <<enum>>
        NOT_STARTED,
        PLAYING,
        FINISHED
    }

    Game "" --> "2..4" Player : has
    Board "" *--* "8..16" Piece : contains
    Board *--* "72" Square : contains
    Game "" --> "1..2" Dice : uses
    Player "1" --> "4" Piece : has
    PieceColor --> Piece
    Game --> Board
    Game --> GameState

